<Window x:Class="Trade.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trade"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid>
     
        <Label Content="Введите логин:" HorizontalAlignment="Center" Margin="311, 144, 389, 249" VerticalAlignment="Center" />
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="24" Margin="321,176,0,0" VerticalAlignment="Top" Width="166" />
        <Label Content="Введите пароль:" HorizontalAlignment="Center" Margin="311, 199, 380, 194" VerticalAlignment="Center" />
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Height="24" Margin="321,232,0,0" VerticalAlignment="Top" Width="166" />
        <Button x:Name="regin" Click="regin_Click" Content="Регистрация" HorizontalAlignment="Left" Margin="412,276,0,118" Height="NaN" Width="91" />
        <Button x:Name="enter" Click="enter_Click" Content="Войти" HorizontalAlignment="Left" Margin="319,276,0,118" Height="NaN" RenderTransformOrigin="0.521,0.526" Width="68" />
    </Grid>
</Window>
