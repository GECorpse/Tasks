<Window x:Class="FitnessClubRasima.Windows.ManagementListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClubRasima.Windows"
        mc:Ignorable="d"
        Title="ManagementListWindow" Height="720" Width="1280">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="resources/Background1.jpg" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0"
                   Text="Управление"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <WrapPanel Grid.Row="1"
                   VerticalAlignment="Center">

            <TextBlock x:Name="TblSearch" Text="Поиск"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="8 0 0 0"/>

            <TextBox x:Name="TbSearch"
                     FontSize="18"                   
                     Margin="8 0 0 0"
                     Width="200"
                     Height="30" TextChanged="TbSearch_TextChanged"
                     />

            <TextBlock 
                   x:Name="TbSort"
                   Text="Сортировка"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="8 0 0 0"/>

            <ComboBox x:Name="CmbSort"
                     FontSize="18"                   
                     Margin="8 0 0 0"
                     Width="333"
                     Height="30" SelectionChanged="CmbSort_SelectionChanged"
                     />

        </WrapPanel>

        <ListView x:Name="lvUser"
                  Grid.Row="2"
                  Margin="5" 
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="lvUser_SelectionChanged" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="DarkSlateGray"
                            BorderThickness="1"
                            Width="250"
                            Height="350"
                            Margin="8">
                        <StackPanel>
                            <Image x:Name="ClientImage"
                                   Height="150"
                                   Width="190">
                                <Image.Source>
                                    <Binding Path="PhotoPath">
                                        <Binding.TargetNullValue>
                                            <ImageSource>/Windows/resources/Nullservice.jpg</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>

                            </Image>

                            <TextBlock
                                Text="Логин:"
                                FontSize="15"
                                Margin="5 0 0 0"/>

                            <TextBlock Text="{Binding Login}"
                                       FontSize="18"
                                       Margin="5 0 0 0"/>

                            <TextBlock
                                Text="Пароль:"
                                FontSize="15"
                                Margin="5 0 0 0"/>

                            <TextBlock Text="{Binding Password}"
                                       FontSize="18"
                                       Margin="5 0 0 0"/>

                            <TextBlock
                                Text="Email:"
                                FontSize="15"
                                Margin="5 0 0 0"/>

                            <TextBlock Text="{Binding Email}"
                                       FontSize="18"
                                       Margin="5 0 0 0"/>

                            <TextBlock
                                Text="Роль:"
                                FontSize="15"
                                Margin="5 0 0 0"/>

                            <TextBlock Text="{Binding IdRole}"
                                       FontSize="18"
                                       Margin="5 0 0 0"/>

                            <Button x:Name="BtnEditUser"
                                    Content="Изменить"
                                    FontSize="18"
                                    Width="150"
                                    Height="30"
                                    Margin="10"
                                    Click="BtnEditUser_Click"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="BtnAddUser"
                Content="Добавить"
                Grid.Row="3"
                Width="250"
                Height="40"
                FontSize="22"
                HorizontalAlignment="Right"
                Margin="20 0 0 0"
                Click="BtnAddUser_Click"/>

    </Grid>
</Window>
