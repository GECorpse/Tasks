<Window x:Class="FitnessClubRasima.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClubRasima.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="600" Width="400" >
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="resources/Background1.jpg" />
        </Grid.Background>



        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">

            <Separator Opacity="0" Margin="30"/>

            <Label Content="Авторизация" FontSize="32" />

            <Separator Opacity="0" Margin="30"/>

            <TextBlock x:Name="tbLogin" Text="Имя" />
            <TextBox x:Name="txLogin" Height="20" Width="200" />

            <TextBlock x:Name="tbPassword" Text="Пароль" />
            <PasswordBox x:Name="pbLogin" Height="20" Width="200" />

            <Separator Opacity="0" Margin="30"/>

            <Button x:Name="bLogin" Content="Войти" VerticalAlignment="Bottom"/>

        </StackPanel>
    </Grid>
</Window>
